{% extends '@EasyAdmin/layout.html.twig' %}

{% block title %} 
    Equipages
{% endblock %}


{% block main %}
    <style>       
        .competition-row {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0.5rem;
            min-width: 750px; /* Ensures form doesn't shrink too much */
        }

        .competition-name {
            font-weight: bold;
            border: 1px solid #ccc;
            width: 250px;
            padding: 0.4rem;
        }

        .crew-select {
            width: 350px;
        }

        .add-link {
            text-decoration: none;
            font-size: 1.3rem;
            padding-left: 0 0.5rem;
        }

        .edit-button {
            width: 120px;
            height: 30px;
            padding: 0.4rem 0.8rem;
        }
    </style>
    <h2 style="margin-bottom: 2rem;">Création ou modification d'un équipage</h2>

    <div> 
        {% for competition in competitions %}
            <div class="competition-row">
                <div class="competition-name">
                    {{ competition.name }}
                </div>
                <a class="btn btn-sm btn-success"
                href="{{ path('admin', {
                    crudControllerFqcn: 'App\\Controller\\Admin\\CrewsCrudController',
                    crudAction: 'new',
                    competition: competition.id
                }) }}">
                ➕ Nouveau équipage
                </a>                               
                {% if competition.crew|length > 0 %}
                    <button type="button"
                            class="btn btn-sm btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#editModal-{{ competition.id }}">
                        ✏️ Modifier un équipage
                    </button>
                {% endif %}
            </div>                   
             <!-- Modal -->
            <div class="modal fade" id="editModal-{{ competition.id }}" tabindex="-1" aria-labelledby="editModalLabel-{{ competition.id }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel-{{ competition.id }}">Modifier un équipage{{ competition.name }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        {% for crew in competition.crew %}
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                {% if crew.competition.typeCompetition.id == 2 %}
                                    <span>{{ crew.pilot.lastname }} {{ crew.pilot.firstname }} </span>
                                {% else %}
                                    <span>{{ crew.pilot.lastname }} {{ crew.pilot.firstname }} & {{ crew.navigator.lastname }} {{ crew.navigator.firstname }}</span>
                                {% endif %}
                                <a href="{{ editUrls[crew.id] }}" class="btn btn-sm btn-outline-primary">✏️ Modifier</a>
                            </div>
                        {% else %}
                            <p>Aucun équipage à modifier.</p>
                        {% endfor %}                       
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    </div>
                    </div>
                </div>
            </div>   
        {% endfor %}
    </div>
{% endblock main %}