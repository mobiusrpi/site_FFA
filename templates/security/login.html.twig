{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class='container-fluid mt-4 px-3'>
        <div class="row">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto border border-dark border-1 rounded-4 p-3">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h3 class="h3 mb-3 font-weight-normal">Me connecter</h3>
                    <div>
                        <label for="username">Email</label>  
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn btn-primary mt-3" type="submit">
                        Me connecter
                    </button>
                    <p class=" mt-3"><a href="{{ path('forgotten_password') }}" > Mot de passe oubli√©</a></p>
                    <p class="mr-3"> Pas encore inscrit(e) ? :<a href="{{ path('new_user_registration') }}" class="btn btn-info btn-sm ms-1"> M'incrire</a></p>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

