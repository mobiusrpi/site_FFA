{% for label, messages in app.flashes() %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show d-flex justify-content-between align-items-center mt-3" role="alert">
            <div class="flex-grow-1">
                {{ message|raw }}
            </div>                    
            <button type='button' class='btn-close me' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    {% endfor %}
{% endfor %}
