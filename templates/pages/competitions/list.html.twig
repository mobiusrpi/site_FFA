{% extends 'base.html.twig' %}

{% block title %}Liste des compétitions{% endblock %}

{% block body %} 
    <style>
        .min-width-70 {
            min-width: 70px;
        }
    </style>
    <div class="container mt-4">
        <h3 class='mx-auto text-center fw-bold'>Inscription aux compétitions de {{ date('now')|date ('Y') }}</h3>

        {% for message in app.flashes('success') %}
          <div class="alert alert-success mt-4">
            {{message}}
          </div> 
        {% endfor %}
        
        <div class="row">
            {% for compet in competition_list %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                    <div class="card mb-3 shadow-sm border border-info">
                        <div class="card-body">
                            <h5 class="card-title">{{ compet.name }}</h5>
                            <p class="card-text mb-1"><strong>Type:</strong> {{ compet.typecompetition.typeComp }}</p>
                            <p class="card-text mb-1"><strong>Lieu:</strong> {{ compet.location }}</p>
                            <p class="card-text mb-1"><strong>Inscription:</strong> 
                                {% if compet.startRegistration|date('Y-m-d') != compet.endRegistration|date('Y-m-d') %} 
                                    {{ compet.startRegistration|format_datetime(locale='fr', pattern='dd MMMM') }} au 
                                {% endif %}                                                         
                                <span class="{{ compet.endRegistration <= date('now') ? 'text-danger' : '' }}">
                                    {{ compet.endRegistration|format_datetime(locale='fr', pattern='dd MMMM YYYY') }}
                                </span>
                            </p>
                            <p class="card-text mb-2"><strong>Compétition:</strong> 
                                {% if compet.startDate|date('Y-m-d') != compet.endDate|date('Y-m-d') %}
                                    {{ compet.startDate|format_datetime(locale='fr', pattern='dd MMMM') }} au
                                {% endif %}
                                {{ compet.endDate|format_datetime(locale='fr', pattern='dd MMMM YYYY') }}
                            </p>

                            {% if is_granted('ROLE_USER') %}
                              <div class="d-flex gap-2 justify-content-center gap-2 mt-3"> 
                                {% if compet.startRegistration <= date('now') and date('now') <= compet.endRegistration %}
                                  <form action="{{ path('crews_registration', {'competId': compet.id}) }}" method="get" style="display: inline;">
                                      <button type="submit"
                                              class="btn btn-outline-success btn-sm text-center"
                                              title="Modifier">
                                          <i class="fa-solid fa-pen-to-square"></i>Inscription
                                      </button>
                                  </form>                                
                                {% elseif compet.endRegistration <= date('now') %}
                                    <button class="btn btn-outline-danger btn-sm" disabled>
                                      <i class="fa-solid fa-clock me-1"></i>Hors délai
                                    </button>
                                {% else %}
                                    <button class="btn btn-outline-warning btn-sm" disabled>
                                      <i class="fa-solid fa-hourglass-half me-1"></i>En attente
                                    </button>
                                {% endif %}                              
                              </div>
                            {% endif %}
                            
                        </div>
                    </div>                  
                </div>
            {% endfor %}
        </div>
    <div>          
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      {% else %}
      <h6 class="container mt-4">
        <p class="fw-bold">Veuillez-vous connecter pour vous inscrire</p>
      </h6>       
    {% endif %}
  {% endblock %}
