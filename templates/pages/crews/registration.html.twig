 {% extends 'base.html.twig' %}

{% block title %}Inscription aux compétitions{% endblock %}

{% block body %}
    <div class 'container mt-4'>
      <h4 class= "mx-auto text-center fw-bold" style="width: 400px">Inscription</h2>  
      {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
          {{ message }}
        </div>   
      {% endfor %}  
      <div>
        <p class= 'text-center'>Inscription pour la compétition se déroulant à </br><strong>{{ event.location }}</strong>
        du <strong>{{ event.startDate|format_datetime(locale='fr',pattern='dd MMMM y') }} </strong>
        au <strong>{{ event.endDate|format_datetime(locale='fr',pattern='dd MMMM y') }}</strong></p>
      </div>
      <div class="mx-auto" style="width: 800px;">
          {{ form_start(form) }}
              {% if form_errors(form) is not empty %}
                <div class="alert alert-danger">
                  {{ form_errors(form) }}
                </div>
              {% endif %}
              <div class="row justify-content-center">
                <div class='col-3'>
                  {{ form_widget(form.competition) }}
                </div>        
              </div> 
               
        <div class='col-12'>
            <hr class="bg-danger border-4 border-top border-danger" />
        </div>
      </div>  
      <div class="mx-auto" style="width: 400px;">
        <div class=""> 
            {{ form_row(form.pilot) }}
              <a href ="{{ path('competitors.registration', {'origin':app.request.attributes.get('_route')}) }}" class="btn btn-primary">
                Nouveau compétiteur
              </a>                  
              {% if form.navigator is defined %}
                {{ form_row(form.navigator) }}
              {% endif %}              
              <div class='form-group mt-4'>
                {{ form_row(form.category) }} 
              </div>                            
            <div class="form-group border border-primary mt-4">     
              <div class="row justify-content-center fw-bold">
                <p class='text-center'>
                  Avion
                </p>
              </div>         
              {{ form_row(form.callsign) }}  
              {{ form_row(form.aircraftFlyingclub) }}              
              {{ form_row(form.aircraftType) }}
              {{ form_row(form.aircraftSpeed) }}
              <div class="form-check form-switch text-start">
                {{ form_row(form.aircraftSharing) }}
              </div>
              {{ form_row(form.pilotShared) }}              
            </div>                                         
            {{ form_row(form._token) }}    
            <div class="row justify-content-center">
              <div class="col-10 text-center">                 
                {{ form_row(form.submit) }}                       
                <a href ="{{ path('competitions.list') }}" class="btn btn-info btn-sm mt-4">
                  Annuler
                </a>    
              </div>   
            </div>
            <div>
              </br> </br> </br>
            </div>
          {{  form_end(form) }}   
        </div>         
        </div>
      </div>  
  </div>
{% endblock %}